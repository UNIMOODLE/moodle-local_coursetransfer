{{!
  @template local_coursetransfer/origen_restore/origin_restore_cat_step2_page

  Example context (json):

}}
<div class="local_coursetransfer" data-region="origin_restore_cat_step2_page">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} origin_restore_category_title, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} origin_restore_category_desc, local_coursetransfer {{/str}}</p>

    {{# haserrors }}
        {{> local_coursetransfer/components/alert }}
    {{/ haserrors }}

    {{^ haserrors }}
        <hr>

        <h4 class="h4">{{#str}} step5_restore_origin_site, local_coursetransfer {{/str}}</h4>

        <div class="origin-site">{{ host }}</div>

        <hr>
        <h3 class="h2">{{#str}} step2_categories_list, local_coursetransfer {{/str}}</h3>
        <table>
            <thead>
            <tr>
                <th></th>
                <th>{{#str}} step2_category_id, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_category_name, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_category_idnumber, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_category_parentname, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_category_totalcourses, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_category_totalsubcategories, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_category_totalcourseschild, local_coursetransfer {{/str}}</th>
            </tr>
            </thead>
            <tbody>
            {{# categories }}
                <tr data-action="category">
                    <td><input type="radio" name="radiogroup" data-action="select" data-id="{{id}}"></td>
                    <td id="categoryid">{{ id }}</td>
                    <td><a href="{{ siteurl }}/course/index.php?categoryid={{id}}">{{ name }}</a></td>
                    <td>{{ idnumber }}</td>
                    <td><a href="{{ siteurl }}/course/index.php?categoryid={{parentnameid}}">{{ parentname }}</a></td>
                    <td>{{ totalcourses }}</td>
                    <td>{{ totalsubcategories }}</td>
                    <td>{{ totalcourseschild }}</td>
                </tr>
            {{/ categories }}
            </tbody>
        </table>
        <div class="alert alert-danger hidden" role="alert"></div>
    {{/ haserrors }}

    {{> local_coursetransfer/components/action_buttons }}

</div>
