{{!
  @template local_coursetransfer/origen_restore/origin_restore_cat_step3_page

  Example context (json):
  {
  }

}}
<div class="local_coursetransfer" data-region="origin_restore_cat_step3_page">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} origin_restore_category_title, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} origin_restore_category_step3_desc, local_coursetransfer {{/str}}</p>

    {{# haserrors }}
        {{> local_coursetransfer/components/alert }}
    {{/ haserrors }}

    {{^ haserrors }}

        <hr>

        <h4 class="h4">{{#str}} step5_restore_origin_site, local_coursetransfer {{/str}}</h4>

        <div class="origin-site">{{ siteurl }}</div>

        {{> local_coursetransfer/components/category_details }}

        <hr>

        {{> local_coursetransfer/components/courses_categories_tree }}

        <hr>
        <h4 class="h4">{{#str}} step4_target_title, local_coursetransfer {{/str}}</h4>

        <p>{{#str}} step4_target_desc, local_coursetransfer {{/str}}</p>

        <select name="targetid" data-action="target" data-catid="{{ id }}">
            <option value="0" selected>{{#str}} createnewcategory, local_coursetransfer {{/str}}</option>
            {{# destinies }}
                <option value="{{ id }}">{{ name }} {{# idnumber }}({{ idnumber }}){{/ idnumber }}</option>
            {{/ destinies }}
        </select>

        <hr>

        <h4 class="h4">{{#str}} step4_config_title, local_coursetransfer {{/str}}</h4>

        <p>{{#str}} step4_restore_desc, local_coursetransfer {{/str}}</p>

        {{> local_coursetransfer/components/cat_configuration }}

        <div class="alert alert-danger hidden" role="alert"></div>
    {{/ haserrors }}

    {{> local_coursetransfer/components/action_buttons }}

</div>
