<div class="local_coursetransfer" data-region="new_origin_restore_category_step4_page" data-restoreid="{{ restoreid }}" data-targetid="{{ targetid }}">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} steps_restore_title_cat, local_coursetransfer {{/str}}</h3>

    {{# haserrors }}
        {{> local_coursetransfer/components/alert }}
    {{/ haserrors }}

    {{^ haserrors }}
        <p>{{#str}} step4_restore_desc_cat, local_coursetransfer {{/str}}</p>

        <h3 class="h3">{{#str}} step4_restore_origin_site, local_coursetransfer {{/str}}</h3>

        <div class="origin-site">{{ host }}</div>

        <h3 class="h3">{{#str}} step4_restore_selected_category, local_coursetransfer {{/str}}</h3>

        {{> local_coursetransfer/components/category_details }}

        <h4 class="h4">{{#str}} step4_config_title, local_coursetransfer {{/str}}</h4>

        {{> local_coursetransfer/components/cat_configuration }}

        <h4 class="h4">{{#str}} step4_courses_title_desc, local_coursetransfer {{/str}}</h4>

        {{> local_coursetransfer/components/category_courses }}

        <div class="alert alert-danger hidden" role="alert"></div>

        <hr>

    {{/ haserrors }}

    <div class="button-container">
        <a type="button" class="btn btn-dark" href="{{ table_url }}">{{#str}} steps_buttons_cancel, local_coursetransfer {{/str}}</a>
        <a type="button" class="btn btn-light" href="{{ back_url }}">{{#str}} steps_buttons_back, local_coursetransfer {{/str}}</a>
        <button type="button" class="btn btn-primary" data-action="execute-restore">
            {{#str}} execute_restore, local_coursetransfer {{/str}}
        </button>
    </div>

</div>
