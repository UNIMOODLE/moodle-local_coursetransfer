<div class="local_coursetransfer" data-region="new_origin_restore_category_step3_page">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} steps_restore_title_cat, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} step3_restore_desc_cat, local_coursetransfer {{/str}}</p>

    {{# haserrors }}
        {{> local_coursetransfer/components/alert }}
    {{/ haserrors }}

    {{^ haserrors }}
        {{> local_coursetransfer/components/category_details }}

        <h4 class="h4">{{#str}} step4_config_title, local_coursetransfer {{/str}}</h4>

        {{> local_coursetransfer/components/cat_configuration }}

        <h3 class="h2">{{#str}} step3_category_list, local_coursetransfer {{/str}}{{ categoryname }}</h3>

        {{> local_coursetransfer/components/category_courses }}

        <div class="alert alert-danger hidden" role="alert"></div>
    {{/ haserrors }}

    {{> local_coursetransfer/components/action_buttons }}

</div>
