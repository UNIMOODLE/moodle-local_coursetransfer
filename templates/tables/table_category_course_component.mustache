<div data-region="table_category_course_component">
    <button type="button" class="btn btn-dark origin-activity" data-toggle="modal" data-target="#modalCategoryCourses-{{ id }}">
        {{#str}} view {{/str}}
    </button>

    <!-- Modal -->
    <div class="modal fade bd-example-modal-lg" id="modalCategoryCourses-{{ id }}" tabindex="-1" role="dialog" aria-labelledby="modalCategoryCourses-{{ id }}-Title" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document" style="max-width: 1000px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCategoryCourses-{{ id }}-Title">{{#str}} courses {{/str}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="font-size: 13px">

                    {{> local_coursetransfer/components/category_courses }}

                </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
