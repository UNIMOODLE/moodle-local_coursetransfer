{{!
  @template local_coursetransfer/components/category_courses

  Example context (json):
  {
  }

}}
<table style="width: 100%">
    <thead>
    <tr>
        <th></th>
        {{# has_logs }}
        <th>{{#str}} origin_course_id, local_coursetransfer {{/str}}</th>
        <th>{{#str}} target_course_id, local_coursetransfer {{/str}}</th>
        {{/ has_logs }}
        {{^ has_logs }}
            <th>{{#str}} step2_course_id, local_coursetransfer {{/str}}</th>
        {{/ has_logs }}
        <th>{{#str}} step2_course_name, local_coursetransfer {{/str}}</th>
        <th>{{#str}} step2_course_shortname, local_coursetransfer {{/str}}</th>
        <th>{{#str}} step2_course_idnumber, local_coursetransfer {{/str}}</th>
        <th>{{#str}} step2_course_categoryid, local_coursetransfer {{/str}}</th>
        <th>{{#str}} step2_course_categoryname, local_coursetransfer {{/str}}</th>
        {{# has_status }}
            <th>{{#str}} status, local_coursetransfer {{/str}}</th>
        {{/ has_status }}
        {{# has_logs }}
        <th>{{#str}} log_page, local_coursetransfer {{/str}}</th>
        {{/ has_logs }}
    </tr>
    </thead>
    <tbody>
    {{# category.courses }}
        <tr data-action="course">
            <td><input type="checkbox"
                       name="radiogroup"
                       data-action="select"
                       data-courseid="{{ id }}"
                       {{# disabled }}disabled{{/ disabled }} {{# checked }}checked{{/ checked }}></td>
            {{# has_logs }}
            <td id="origin_id">{{ origin_id }}</td>
            <td id="target_course_id"><a href="{{ target_url }}" target="_blank">{{ target_course_id }}</a></td>
            {{/ has_logs }}
            {{^ has_logs }}
                <td id="courseid"><a href="{{ url }}" target="_blank">{{ id }}</a></td>
            {{/ has_logs }}
            <td>{{ fullname }}</td>
            <td>{{ shortname }}</td>
            <td>{{ idnumber }}</td>
            <td>{{ categoryid }}</td>
            <td>{{ categoryname }}</td>
            {{# has_status }}
                <td>{{ status }}</td>
            {{/ has_status }}
            {{# has_logs }}
                <td><a href="{{ log_url }}" target="_blank">{{#str}} log_page, local_coursetransfer {{/str}}</a></td>
            {{/ has_logs }}
            </tr>
    {{/ category.courses }}
    </tbody>
</table>
{{^ category.courses }}
    <div class="alert alert-primary mt-4" role="alert" style="width: 100%; text-align: center">
        {{#str}} not_courses, local_coursetransfer {{/str}}
    </div>
{{/ category.courses }}