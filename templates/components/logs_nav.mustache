{{!
  @template local_coursetransfer/components/logs_nav

  Example context (json):
  {
  }

}}
<ul data-region="logs_nav" class="nav nav-tabs">
    <form action="{{ form_url }}" method="post">
        <div class="form-row">
            <div class="form-group mr-3">
                <label for="type">{{#str}} type, local_coursetransfer {{/str}}</label>
                <select id="type" class="form-control" name="type">
                    {{# selects.type }}
                        <option value="{{ value }}" {{# selected }}selected{{/ selected }}>{{ name }}</option>
                    {{/ selects.type }}
                </select>
            </div>
            <div class="form-group mr-3">
                <label for="direction">{{#str}} direction, local_coursetransfer {{/str}}</label>
                <select id="direction" class="form-control" name="direction">
                    {{# selects.direction }}
                        <option value="{{ value }}" {{# selected }}selected{{/ selected }}>{{ name }}</option>
                    {{/ selects.direction }}
                </select>
            </div>
            <div class="form-group mr-2" style="display: flex; align-items: flex-end;">
                <button type="submit" class="btn btn-primary">{{#str}} view_logs, local_coursetransfer {{/str}}</button>
            </div>
            <div class="form-group" style="display: flex; align-items: flex-end;">
                <a href="{{ restore_url }}" class="btn btn-outline-secondary" target="_blank">{{#str}} restore_page, local_coursetransfer {{/str}}</a>
            </div>
        </div>
    </form>
</ul>