<div data-region="stepbystep">

    <ul class="stepbystep">
        <span class="line"></span>

        {{# steps }}
            <li class="step {{# current }}current{{/ current }}"><span class="num">{{ num }}</span></li>
        {{/ steps }}

    </ul>

</div>
<style>
    div.local_coursetransfer div[data-region="stepbystep"] ul.stepbystep {
        display: flex;
        width: 133px;
        justify-content: space-between;
        align-items: center;
        margin: auto;
        list-style: none;
        padding: 0;
        position: relative;
    }
    div.local_coursetransfer div[data-region="stepbystep"] ul.stepbystep li.step {
        height: 13px;
        width: 13px;
        background-color: black;
        border-radius: 10px;
    }
    div.local_coursetransfer div[data-region="stepbystep"] ul.stepbystep li.step span.num{
        display: none;
    }
    div.local_coursetransfer div[data-region="stepbystep"] ul.stepbystep li.step.current{
        height: 34px;
        width: 34px;
        background: #0D6EFD;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }
    div.local_coursetransfer div[data-region="stepbystep"] ul.stepbystep li.step.current span.num{
        color: white;
        display:block;
        margin: auto;
        font-weight: 600;
        font-size: 21px;
    }
    div.local_coursetransfer div[data-region="stepbystep"] ul.stepbystep span.line {
        border-bottom: 1px dotted black;
        width: 100%;
        position: absolute;
        z-index: 0;
    }
</style>