{{!
  @template local_coursetransfer/sites_page

  Example context (json):
    {
    }

}}
<div class="local_coursetransfer" data-region="sites_page" >

    <a class="btn btn-outline-primary mb-4" href="{{ back }}">{{#str}} back_config, local_coursetransfer {{/str}}</a>
    <a class="btn btn-outline-secondary mb-4" href="{{ summary }}" target="_blank">{{#str}} summary, local_coursetransfer {{/str}}</a>

    <p>{{ desc }}</p>

    <div>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary mb-4" data-toggle="modal" data-target="#createSite">
           {{#str}} create_site, local_coursetransfer {{/str}}
        </button>

        <!-- Modal -->
        <div class="modal fade" id="createSite" tabindex="-1" role="dialog" aria-labelledby="createSite" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">{{#str}} create_site, local_coursetransfer {{/str}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form data-region="create-form">
                            <div class="form-group">
                                <label for="host">{{#str}} host_url, local_coursetransfer {{/str}}</label>
                                <input type="text" class="form-control" id="host" aria-describedby="emailHelp" placeholder="{{#str}} host_url, local_coursetransfer {{/str}}">
                                <small id="hostHelp" class="form-text text-muted">{{#str}} host_url_desc, local_coursetransfer {{/str}}</small>
                            </div>
                            <div class="form-group">
                                <label for="token">{{#str}} host_token, local_coursetransfer {{/str}}</label>
                                <input type="text" class="form-control" id="token" placeholder="{{#str}} host_token, local_coursetransfer {{/str}}">
                                <small id="tokenHelp" class="form-text text-muted">{{#str}} host_token_desc, local_coursetransfer {{/str}}</small>
                            </div>
                        </form>
                        <div class="alert alert-danger" role="alert" data-region="error-msg" style="display: none"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}} cancel {{/str}}</button>
                        <button type="button" class="btn btn-primary" data-action="create">{{#str}} create_site, local_coursetransfer {{/str}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{{ table }}}

</div>
<style>

</style>

{{#js}}
    require(['local_coursetransfer/sites'], function(sites) {
        sites.initSites('[data-region="sites_page"]', '{{ type }}');
    });
{{/js}}

