  Example context (json):

}}
<div class="local_coursetransfer" data-region="new_origin_restore_course_step1_page" data-nexturl="{{ next_url }}">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} steps_restore_title, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} step1_restore_desc, local_coursetransfer {{/str}}</p>

    {{{ form }}}

    <div class="alert alert-danger hidden" role="alert"></div>

    {{> local_coursetransfer/components/action_buttons }}

</div>
<style>
    div[data-region='new_origin_restore_course_step1_page']{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    div[data-region='new_origin_restore_course_step1_page'] h3.h3{
        font-size: 28px;
        font-weight: 600;
        margin: auto;
        width: 50%;
        padding: 10px;
        text-align: center;
    }
    div[data-region='new_origin_restore_course_step1_page'] p{
        font-size: 16px;
        font-weight: 400;
        margin: auto;
        width: 50%;
        padding: 10px;
        text-align: center;
    }
    div[data-region='new_origin_restore_course_step1_page'] form{
        margin: auto;
        width: 50%;
        padding: 10px;
    }
    div[data-region='new_origin_restore_course_step1_page'] div.alert-danger{
        margin: auto;
        width: 50%;
        padding: 10px;
        align-content: center;
        align-self: center;
        font-size: 16px;
        font-weight: 400;
    }
    div[data-region='new_origin_restore_course_step1_page'] div.button-container{
        padding: 10px;
    }
    div[data-region='new_origin_restore_course_step1_page'] div.button-container a.btn-primary{
        background: #0D6EFD;
    }
    div[data-region='new_origin_restore_course_step1_page'] div.button-container a.btn-light{
        border: 1px solid black;
    }
</style>


{{#js}}
    require(['local_coursetransfer/origin_restore_course_step1'], function(restoreCourseStep1) {
        restoreCourseStep1.initRestoreCourseStep1('[data-region="new_origin_restore_course_step1_page"]', {{ courseid }});
    });
{{/js}}
