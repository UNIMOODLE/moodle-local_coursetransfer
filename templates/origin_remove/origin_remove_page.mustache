{{!
  @template local_coursetransfer/origin_remove/origin_remove_page

  Example context (json):

}}
<div class="local_coursetransfer" data-region="origin_remove_page" data-nexturl="{{ next_url }}">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} remove_page, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} remove_page_desc, local_coursetransfer {{/str}}</p>

    {{{ form }}}

    <div class="alert alert-danger hidden" role="alert"></div>

    <div data-region="button-container" class="button-container">
        <a type="button" class="btn btn-dark" href="{{ table_url }}">{{#str}} steps_buttons_cancel, local_coursetransfer {{/str}}</a>
        <a type="button" class="btn btn-light" href="{{ back_url }}">{{#str}} steps_buttons_back, local_coursetransfer {{/str}}</a>
        {{# button }}
            <button type="button" class="btn btn-primary" data-action="next" {{#next_url_disabled}}disabled{{/next_url_disabled}}>{{#str}} steps_buttons_next, local_coursetransfer {{/str}}</button>
        {{/ button }}
        {{^ button }}
            <a type="button" class="btn btn-primary" data-action="next" {{#next_url_disabled}}disabled{{/next_url_disabled}}>{{#str}} steps_buttons_next, local_coursetransfer {{/str}}</a>
        {{/ button }}
    </div>
</div>
<style>
    [data-region="button-container"].button-container {
        padding: 10px;
        margin-top: 30px;
    }
    [data-region="button-container"].button-container a.btn-primary {
        background: #0D6EFD;
    }
    [data-region="button-container"].button-container a.btn-light {
        border: 1px solid black;
    }

    body#page-local-coursetransfer-origin_remove .page-header-headings .h2 {
        display: none;
    }
    div[data-region='origin_remove_page']{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    div[data-region='origin_remove_page'] h3.h3{
        font-size: 28px;
        font-weight: 600;
        margin: auto;
        width: 100%;
        padding: 10px;
        text-align: center;
    }
    div[data-region='origin_remove_page'] p{
        font-size: 16px;
        font-weight: 400;
        margin: auto;
        width: 100%;
        padding: 10px;
        text-align: center;
    }
    div[data-region='origin_remove_page'] form{
        margin: auto;
        width: 100%;
        padding: 10px;
    }
    div[data-region='origin_remove_page'] div.alert-danger{
        margin: auto;
        width: 100%;
        padding: 10px;
        align-content: center;
        align-self: center;
        font-size: 16px;
        font-weight: 400;
    }
    div[data-region='origin_remove_page'] div.button-container{
        padding: 10px;
    }
    div[data-region='origin_remove_page'] div.button-container a.btn-primary{
        background: #0D6EFD;
    }
    div[data-region='origin_remove_page'] div.button-container a.btn-light{
        border: 1px solid black;
    }
</style>


{{#js}}
    require(['local_coursetransfer/origin_remove_page'], function(originRemove) {
        originRemove.initOriginRemove('[data-region="origin_remove_page"]');
    });
{{/js}}
