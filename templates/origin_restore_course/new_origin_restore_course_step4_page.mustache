{{!
  @template local_coursetransfer/origin_restore_course/new_origin_restore_course_step4_page

  Example context (json):
  {
  }

}}
<div class="local_coursetransfer" data-region="new_origin_restore_course_step4_page" data-restoreid="{{ restoreid }}">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} steps_restore_title, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} step4_restore_desc, local_coursetransfer {{/str}}</p>

    {{# haserrors }}
        {{> local_coursetransfer/components/alert }}
    {{/ haserrors }}

    {{^ haserrors }}
        {{> local_coursetransfer/components/course_details }}

        <h4 class="h4">{{#str}} step4_config_title, local_coursetransfer {{/str}}</h4>

        {{> local_coursetransfer/components/course_configuration }}
        <div class="alert alert-danger hidden" role="alert"></div>
    {{/ haserrors }}

    {{> local_coursetransfer/components/action_buttons }}

</div>
<style>
    div[data-region='new_origin_restore_course_step4_page'] {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    div[data-region='new_origin_restore_course_step4_page'] h3.h3{
        font-size: 28px;
        font-weight: 600;
        margin: auto;
        width: 50%;
        padding: 10px;
        text-align: center;
    }
    div[data-region='new_origin_restore_course_step4_page'] p {
        font-size: 16px;
        font-weight: 400;
        margin: auto;
        width: 50%;
        padding: 10px;
        text-align: center;
    }
    div[data-region='new_origin_restore_course_step4_page'] h4.h4 {
        font-size: 24px;
        font-weight: 600;
        margin: auto;
        width: 50%;
        padding-top: 20px;
        padding-bottom: 10px;
        text-align: left;
    }
</style>

{{#js}}
    require(['local_coursetransfer/origin_restore_course_step4'], function(restoreCourseStep4) {
        restoreCourseStep4.initRestoreCourseStep4('[data-region="new_origin_restore_course_step4_page"]');
    });
{{/js}}
